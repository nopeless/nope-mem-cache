{
  "compilerOptions": {
    "types": ["node", "mocha", "chai"],
    "esModuleInterop": true,
    "outDir":  "./dist",
    "target": "es2018",
    "module": "es2022",
    "resolveJsonModule": true,
    "allowJs": true,
    "declaration": true,
    "declarationMap": true,
    "moduleResolution": "node",
    "strictNullChecks": true,
  },
  "ts-node": {
    "files": true,
    "esm": true,
  },
  "include": [
	  "./src/**/*.ts"
  ],
  "exclude": ["./node_modules", "./**/*.spec.ts"],
  "rootDir": "./src",
}